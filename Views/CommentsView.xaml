             openBehavior:ModelLocator.AutoViewModel="True"
             Title="ComentÃ¡rios">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Frame Grid.Row="0" 
               Margin="10,0,10,0"
            BackgroundColor="{StaticResource SecondaryColor}"
            CornerRadius="20"
            HasShadow="True"
            Padding="20,20,20,0">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                
                    <Label Text="{Binding Posts.Title}"
                        FontSize="28" 
                        FontAttributes="Bold" 
                        TextColor="White" />
                    <Label Margin="10" Grid.Row="1" Text="{Binding Count, StringFormat='{0} comentÃ¡rios disponÃ­veis'}"
                        FontSize="14"
                        TextColor="White"
                        Opacity="0.9" />
            </Grid>
        </Frame>

        <!-- ConteÃºdo Principal -->
        <Grid Grid.Row="1" Margin="0,10,0,0">

            <!-- Lista de Posts -->
            <CollectionView x:Name="Lista"  
                         ItemsSource="{Binding Comments}" 
                        BackgroundColor="Transparent">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Frame Style="{StaticResource CardStyle}">
                                

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!-- ID do Post -->
                                    <StackLayout Grid.Row="0" 
                                            Orientation="Horizontal" 
                                            Spacing="8">
                                        <Frame BackgroundColor="{StaticResource PrimaryColor}"
                                            CornerRadius="10"
                                            Padding="8,4"
                                            HasShadow="False">
                                            <Label Text="{Binding Id, StringFormat='#{0}'}"
                                                Style="{StaticResource IdStyle}"
                                                TextColor="White" />
                                        </Frame>
                                    </StackLayout>
                                    <!-- TÃ­tulo do Post -->
                                    <Label Grid.Row="1"
                                        Text="{Binding Body}"
                                        Style="{StaticResource TitleStyle}"
                                        Margin="0,12,0,8" />
                                </Grid>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <!-- Empty State -->
                <CollectionView.EmptyView>
                    <StackLayout Padding="50" 
                            HorizontalOptions="Center"
                            VerticalOptions="Center">
                        <Label Text="ðŸ“"
                            FontSize="60"
                            HorizontalOptions="Center" />
                        <Label Text="Nenhum comentÃ¡rio encontrado"
                            FontSize="18"
                            FontAttributes="Bold"
                            TextColor="{StaticResource TextPrimaryColor}"
                            HorizontalOptions="Center" />
                        <Label Text="Tente atualizar a lista"
                            FontSize="14"
                            TextColor="{StaticResource TextSecondaryColor}"
                            HorizontalOptions="Center"
                            Margin="0,5,0,20" />
                        <Button Text="Atualizar"
                             BackgroundColor="{StaticResource PrimaryColor}"
                             TextColor="White"
                             CornerRadius="20"
                             Padding="30,10"
                             Command="{Binding RefreshCommand}" />
                    </StackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </Grid>
    </Grid>
