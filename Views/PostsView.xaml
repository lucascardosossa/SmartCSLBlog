<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             x:Class="SmartCSLBlog.Views.PostsView"  
             Title="Posts">  
    <VerticalStackLayout>  
        <Label Text="Lista de Posts" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,20,0,10" />  
        <CollectionView ItemsSource="{Binding Posts}">  
            <CollectionView.ItemTemplate>  
                <DataTemplate>  
                    <Border Margin="10" Padding="10" Stroke="LightGray" StrokeThickness="1">  
                        <VerticalStackLayout>  
                            <Label Text="User ID: {Binding UserId}" FontSize="16" />  
                            <Label Text="{Binding Title}" FontSize="18" FontAttributes="Bold" />  
                        </VerticalStackLayout>  
                    </Border>  
                </DataTemplate>  
            </CollectionView.ItemTemplate>  
        </CollectionView>  
    </VerticalStackLayout>  
</ContentPage>